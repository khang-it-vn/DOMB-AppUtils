<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="138dp"
        android:layout_height="129dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/automobile" />

    <TextView
        android:id="@+id/txtHoTenHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:text="Nguyễn Văn Demo"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageView17"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPhoneHistory"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:text="098756542432"
        android:textColor="@color/white"
        android:background="@drawable/custome_btn_call_2"
        app:layout_constraintStart_toEndOf="@+id/imageView17"
        app:layout_constraintTop_toBottomOf="@+id/imgButtonMapHistory" />

    <ImageButton
        android:id="@+id/imgButtonMapHistory"
        android:layout_width="134dp"
        android:layout_height="33dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitStart"
        android:background="@drawable/custome_btn_call"
        app:layout_constraintStart_toEndOf="@+id/imageView17"
        app:layout_constraintTop_toBottomOf="@+id/txtHoTenHistory"
        app:srcCompat="@drawable/location" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="78dp"
        android:layout_height="20dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="22dp"
        android:text="Open Map"
        app:layout_constraintStart_toEndOf="@+id/imageView17"
        app:layout_constraintTop_toBottomOf="@+id/txtHoTenHistory" />

</androidx.constraintlayout.widget.ConstraintLayout>