<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgViewAvatarSuaDien"
        android:layout_width="103dp"
        android:layout_height="108dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/automobile" />

    <Button
        android:id="@+id/btnCallSuaDien"
        android:layout_width="129dp"
        android:layout_height="35dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/custome_btn_call"
        android:text="Liên hệ"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imgViewAvatarSuaDien"
        app:layout_constraintTop_toBottomOf="@+id/txtKhoangCachSuaDien" />

    <TextView
        android:id="@+id/txtHoTenSuaDien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="Nguyễn Văn C"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imgViewAvatarSuaDien"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtKhoangCachSuaDien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imageView13"
        app:layout_constraintTop_toBottomOf="@+id/txtHoTenSuaDien" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="31dp"
        android:layout_height="28dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@+id/imgViewAvatarSuaDien"
        app:layout_constraintTop_toBottomOf="@+id/txtHoTenSuaDien"
        app:srcCompat="@drawable/location" />

</androidx.constraintlayout.widget.ConstraintLayout>